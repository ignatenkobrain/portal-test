{
    "app-id": "org.gnome.PortalTest",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "portal-test",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "portal-test",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/matthiasclasen/portal-test.git"
                }
            ]
        }
    ]
}
